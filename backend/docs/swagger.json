{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Trading simulation API for historical data replay and order execution",
        "title": "Trade Simulator API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "email": "support@tradesimulator.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/health": {
            "get": {
                "description": "Get health status of the service and database connection",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "Service is healthy",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "503": {
                        "description": "Service is unhealthy",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/market/earliest-time/{symbol}": {
            "get": {
                "description": "Get the earliest available data timestamp for a specific trading symbol",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "market"
                ],
                "summary": "Get Earliest Available Time for Symbol",
                "parameters": [
                    {
                        "enum": [
                            "BTCUSDT",
                            "ETHUSDT"
                        ],
                        "type": "string",
                        "description": "Trading symbol",
                        "name": "symbol",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Earliest available time",
                        "schema": {
                            "$ref": "#/definitions/models.EarliestTimeResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/market/historical": {
            "get": {
                "description": "Fetch historical OHLCV data for supported trading pairs (BTCUSDT, ETHUSDT)",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "market"
                ],
                "summary": "Get Historical Market Data",
                "parameters": [
                    {
                        "enum": [
                            "BTCUSDT",
                            "ETHUSDT"
                        ],
                        "type": "string",
                        "description": "Trading symbol",
                        "name": "symbol",
                        "in": "query",
                        "required": true
                    },
                    {
                        "enum": [
                            "1m",
                            "3m",
                            "5m",
                            "15m",
                            "30m",
                            "1h",
                            "2h",
                            "4h",
                            "6h",
                            "8h",
                            "12h",
                            "1d",
                            "3d",
                            "1w",
                            "1M"
                        ],
                        "type": "string",
                        "default": "1h",
                        "description": "Kline interval",
                        "name": "interval",
                        "in": "query"
                    },
                    {
                        "maximum": 1000,
                        "minimum": 1,
                        "type": "integer",
                        "default": 1000,
                        "description": "Number of klines to return (1-1000)",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Start time in milliseconds",
                        "name": "startTime",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "End time in milliseconds",
                        "name": "endTime",
                        "in": "query"
                    },
                    {
                        "type": "boolean",
                        "default": false,
                        "description": "Enable incomplete candle support",
                        "name": "enableIncomplete",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Historical market data",
                        "schema": {
                            "$ref": "#/definitions/models.HistoricalDataResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/market/symbols": {
            "get": {
                "description": "Get list of supported trading pairs for historical data",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "market"
                ],
                "summary": "Get Supported Trading Symbols",
                "responses": {
                    "200": {
                        "description": "List of supported symbols",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/orders": {
            "get": {
                "description": "Get list of orders for a specific simulation",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Get User Orders",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Simulation ID",
                        "name": "simulation_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "maximum": 1000,
                        "minimum": 1,
                        "type": "integer",
                        "default": 50,
                        "description": "Number of orders to return (default: 50)",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of orders",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/positions": {
            "get": {
                "description": "Get list of current positions for a specific simulation",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Get User Positions",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Simulation ID",
                        "name": "simulation_id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of positions",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/simulation/status": {
            "get": {
                "description": "Get the current status of the running simulation engine",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "simulation"
                ],
                "summary": "Get Current Simulation Status",
                "responses": {
                    "200": {
                        "description": "Current simulation status",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/simulations": {
            "get": {
                "description": "Get list of simulation records for the current user",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "simulations"
                ],
                "summary": "Get User Simulations",
                "parameters": [
                    {
                        "maximum": 1000,
                        "minimum": 1,
                        "type": "integer",
                        "default": 50,
                        "description": "Number of simulations to return (default: 50)",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "minimum": 0,
                        "type": "integer",
                        "default": 0,
                        "description": "Number of simulations to skip (default: 0)",
                        "name": "offset",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of simulations",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/simulations/{id}": {
            "get": {
                "description": "Get detailed information about a specific simulation",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "simulations"
                ],
                "summary": "Get Simulation by ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Simulation ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Simulation details",
                        "schema": {
                            "$ref": "#/definitions/models.Simulation"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Simulation not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete a specific simulation and all its related data",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "simulations"
                ],
                "summary": "Delete Simulation",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Simulation ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success message",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/simulations/{id}/stats": {
            "get": {
                "description": "Get performance statistics for a specific simulation",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "simulations"
                ],
                "summary": "Get Simulation Statistics",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Simulation ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Simulation statistics",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Simulation not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/trades": {
            "get": {
                "description": "Get list of executed trades for a specific simulation",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Get User Trades",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Simulation ID",
                        "name": "simulation_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "maximum": 1000,
                        "minimum": 1,
                        "type": "integer",
                        "default": 50,
                        "description": "Number of trades to return (default: 50)",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of trades",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.EarliestTimeResponse": {
            "type": "object",
            "properties": {
                "earliestTime": {
                    "type": "integer"
                },
                "earliestTimeISO": {
                    "type": "string"
                },
                "symbol": {
                    "type": "string"
                }
            }
        },
        "models.HistoricalDataResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.OHLCV"
                    }
                },
                "symbol": {
                    "type": "string"
                }
            }
        },
        "models.OHLCV": {
            "type": "object",
            "properties": {
                "close": {
                    "type": "number"
                },
                "endTime": {
                    "description": "End time of the candle",
                    "type": "integer"
                },
                "high": {
                    "type": "number"
                },
                "isComplete": {
                    "description": "Whether this candle is complete or partial",
                    "type": "boolean"
                },
                "low": {
                    "type": "number"
                },
                "open": {
                    "type": "number"
                },
                "startTime": {
                    "description": "Start time of the candle",
                    "type": "integer"
                },
                "volume": {
                    "type": "number"
                }
            }
        },
        "models.Simulation": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "end_sim_time": {
                    "description": "Simulation end time in milliseconds",
                    "type": "integer"
                },
                "extra_configs": {
                    "description": "JSON format for additional configs",
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "initial_funding": {
                    "type": "number"
                },
                "mode": {
                    "$ref": "#/definitions/models.SimulationMode"
                },
                "start_sim_time": {
                    "description": "Simulation start time in milliseconds",
                    "type": "integer"
                },
                "status": {
                    "$ref": "#/definitions/models.SimulationStatus"
                },
                "symbol": {
                    "type": "string"
                },
                "total_value": {
                    "description": "Final portfolio value when completed",
                    "type": "number"
                },
                "updated_at": {
                    "type": "string"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        },
        "models.SimulationMode": {
            "type": "string",
            "enum": [
                "spot",
                "future"
            ],
            "x-enum-varnames": [
                "SimulationModeSpot",
                "SimulationModeFuture"
            ]
        },
        "models.SimulationStatus": {
            "type": "string",
            "enum": [
                "running",
                "paused",
                "completed",
                "stopped"
            ],
            "x-enum-varnames": [
                "SimulationStatusRunning",
                "SimulationStatusPaused",
                "SimulationStatusCompleted",
                "SimulationStatusStopped"
            ]
        }
    }
}